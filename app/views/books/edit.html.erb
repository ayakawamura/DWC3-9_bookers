<h1>Editing Book</h1> 

<% if @book.errors.any? %>
  <div class="warning">
    <p class ="warning-massege">
    <%= @book.errors.count %>errors prohibited this book from being saved:
    </p>

    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>

  </div>
<% end %>

<%= form_with model:@book,local:true do |f|%>

<div class="field">
 <label>Title</label>
 <%=f.text_field :title%> 
</div>

<div class="field">
<label>Body</label> 
<%=f.text_area :body%>
</div>

<div class="button">
 <%=f.submit "Update Book"%>
</div>
<%end%>
  
 
