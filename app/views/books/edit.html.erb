<h1>Editing Book</h1> 

<%= form_with model:@book,local:true do |f|%>

<div class="book-contents">
 <label>Title</label>
 <%=f.text_field :title%> 
</div>

<div class="book-contents">
<label>Body</label> 
<%=f.text_area :body%>
</div>

<div class="book-contents">
 <%=f.submit "Update Book"%>
</div>
<%end%>
  
 
 <%=link_to "Show",book_path(@book.id)%><spa>|</span>
 <%=link_to "Back",books_path %>
