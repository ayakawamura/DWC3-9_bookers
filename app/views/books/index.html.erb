
<div class="index">
  
  <p class=notice><%= flash[:destroyed]%></p>
  
  <h1>Books</h1>



  <table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>

    <td><%=link_to "Show",book_path(book.id)%></td>
    <td><%=link_to "Edit",edit_book_path(book.id)%></td>
    <td><%=link_to "Destroy",book_path(book.id), method: :delete, "data-confirm"=> "Are you sure?" %></td>
  <!--pathにはリンク先のパスではなく操作したいアクションのパスを入れる-->
  <!--リンク先のパスはコントローラのredirect_toで入力-->

  </tr>


  <% end %>
  </table>
</div>


<div class="new">
  <h2>New book</h2>

<% if @book.errors.any? %>
  <div class="warning">
    <p class ="warning-massege">
    <%= @book.errors.count %>errors prohibited this book from being saved:
    </p>

    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>

  </div>
<% end %>

  <%= form_with model:@book,local:true do |f|%>
  <div class ="field">
    <label for="title">Title</label>
    <%=f.text_field :title%>
  </div>

  <div class="field">
  <label for="body">Body</label>
   <%=f.text_area :body%>
  </div>

  <div class="button">
   <%=f.submit "Create Book"%>
  </div>
  <%end%>
</div>
