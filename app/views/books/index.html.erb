
<div class="index">
  <h1>Books</h1>



  <table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>

    <td><%=link_to "Show",book_path(book.id)%></td>
    <td><%=link_to "Edit",edit_book_path(book.id)%></td>
    <td><%=link_to "Destroy",book_path(book.id), method: :delete %></td>
  <!--pathにはリンク先のパスではなく操作したいアクションのパスを入れる-->
  <!--リンク先のパスはコントローラのredirect_toで入力-->
   <!--"date-confirm" =>"Are You Sure?"-->
  </tr>


  <% end %>
  </table>
</div>


<div class="new">
  <h2>New book</h2>

  <%= form_with model:@book,local:true do |f|%>
  <div class ="newbook-contents">
    <label for="title">Title</label>
    <%=f.text_field :title%>
  </div>
  
  <div class="newbook-contents">
  <label for="body">Body</label>
   <%=f.text_area :body%>
  </div>

   <%=f.submit "Create Book"%>
  <%end%>
</div>
